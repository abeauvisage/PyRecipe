#:kivy 1.8.0

# Recipe title
<TitleWidget>:
	text: 'Unknown recipe'
	markup: True
	valign: 'center'
	halign: 'center'
	text_size: self.width, self.height
#	height: self.texture_size[1]
    size_hint_y: 0.2
	font_size: '30dp'
	spacing : '20dp'

# Spacer
<SpaceWidget>:
    id: _spacer_
    size: None,None

# Title for lists
<ListTitle>:
    # canvas.before:
    #     Color:
    #         rgb: .2, .5, .8
    #     Rectangle:
    #         pos: self.pos
    #         size: self.size

    valign: 'top'
    halign: 'left'
    markup: True
    text: "[b]List:[b]"
    text_size: self.size

#List of ingredients or instructions
<ListWidget>:

    orientation: 'vertical'
    spacing: '5dp'

    ListTitle:
        id: _title_
        size_hint_y: 0.2
        text: "[b]List:[b]"

    ScrollView:

        Label:
            id: _content_
            size_hint_y: None
            text_size: self.size
            valign: 'top'
            halign: 'left'

# Description Widget which contains a description, nb of persons, and buttons
# to change the nb of person
<DescriptionWidget>:

    orientation: 'vertical'
    spacing: '5dp'

    ListTitle:
        id: _title_
        size_hint_y: 0.2
        text: "[b]Description:[b]"

    ScrollView:
        Label:
            id: _content_
            size_hint_y: None
            text_size: self.size
            valign: 'top'
            halign: 'left'



# Root widget of a recipe page
RecipeWidget:

	BoxLayout:

		orientation: 'vertical'
		id: _recipe_
		padding: '5dp'
		spacing: '5dp'

        # Contains a recipe title
	    TitleWidget:
			id : _title_

        #Block containing description and list of ingredients
		BoxLayout:
            spacing: '10dp'

            DescriptionWidget:
                id: _description_
    
            ListWidget:
                id: _ingredients_

        #block containing buttons
        BoxLayout:

            orientation: 'horizontal'
            spacing: '100dp'
            size_hint_y: 0.1

            Button:
                id: _minus_
                text: "-"
                height: '10px'
                size_hint_y: None

            Button:
                id: _plus_
                text: "+"
                height: '10px'
                size_hint_y: None

        # A list of instructions
		ListWidget:
			id: _instructions_
