#:kivy 1.8.0

# Recipe title
<TitleWidget>:
	text: 'Unknown recipe'
	markup: True
	valign: 'center'
	halign: 'center'
	text_size: self.width, self.height
#	height: self.texture_size[1]
    size_hint_y: 0.2
	font_size: '30dp'
	spacing : '20dp'

# Description Widget which contains a description, nb of persons, and buttons
# to change the nb of person
<DescriptionWidget>:

    orientation: 'vertical'
    scpacing: '4dp'

    Label:
        id: _description_title_
        valign: 'top'
        halign: 'left'
        markup: True
        text_size: None,None
        text: "[b]Description:[b]"
        size_hint_x: 1

    Label:
        id: _description_content_
        text: ""

    BoxLayout:

        orientation: 'horizontal'

        Button:
            id: _minus_
            text: "-"
            height: '10px'

        Button:
            id: _plus_
            text: "+"
            height: '10px'

#List of ingredients or instructions
<ListWidget>:

    BoxLayout:

        orientation: 'vertical'
        spacing: '4dp'

        Label:
            id: _list_title_
            valign: 'bottom'
            halign: 'left'
            markup: True
            text_size: self.width,self.height
            text: "[b]A title[b]"
            size_hint_y: 1

        Label:
            id: _label_
            valign: 'top'
            halign: 'left'
            text_size: self.width, None
            size_hint_y: 1
            height: self.texture_size[1]

# Root widget of a recipe page
RecipeWidget:

	BoxLayout:

		orientation: 'vertical'
		id: _recipe_
		padding: '10dp'
		spacing: '10dp'

        # Contains a recipe title
	    TitleWidget:
			id : _title_
		
		BoxLayout:

            # A description
			#Label:
				#id: _description_
				##markup: True
				#text: '[b]Description:\n[/b]'
				#text_size: self.size
				#halign: 'left'
				#valign: 'top'
            DescriptionWidget:
                id: _description_

            # A list of ingredients
			ListWidget:
				id: _ingredients_
#				markup: True
#				text: "[b]Ingredients\n[/b]"

        # A list of instructions
		ListWidget:
			id: _instructions_
