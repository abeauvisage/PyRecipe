#:kivy 1.8.0

# Recipe title
<TitleWidget>:
	text: 'Unknown recipe'
	markup: True
	valign: 'center'
	halign: 'center'
	text_size: self.width, self.height
#	height: self.texture_size[1]
    size_hint_y: 0.2
	font_size: '30dp'
	spacing : '20dp'

#Spacer
<SpaceWidget>:
    id: _spacer_
    size: None,None

# Description Widget which contains a description, nb of persons, and buttons
# to change the nb of person
<DescriptionWidget>:

    orientation: 'vertical'
    spacing: '5dp'
#    size_hint_min_y: 0.3

    Label:
        canvas.before:
            Color:
                rgb: .2, .5, .8
            Rectangle:
                pos: self.pos
                size: self.size

        id: _description_title_
        valign: 'top'
        halign: 'left'
        markup: True
        text: "[b]Description:[b]"
        text_size: self.size
        height: '20dp'
        size_hint_y: None

    Label:
        id: _description_content_
        text: ""
        valign: 'top'
        halign: 'left'
        text_size: self.size
        size_hint_y: None

    BoxLayout:

        orientation: 'horizontal'
        spacing: '100dp'
        size_hint_y: None

        Button:
            id: _minus_
            text: "-"
            height: '10px'
            size_hint_y: None

        Button:
            id: _plus_
            text: "+"
            height: '10px'
            size_hint_y: None

    BoxLayout:
        id: "_spacer_"

#List of ingredients or instructions
<ListWidget>:

#    do_scroll_x: True
#    do_scroll_y: False
    #size_hint_min_y: 0.3
    height: '500dp'

    BoxLayout:

        orientation: 'vertical'
        spacing: '5dp'
        size_hint_y: None

        Label:
            canvas.before:
                Color:
                    rgb: .8, .5, .2
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: _list_title_
            valign: 'top'
            halign: 'left'
            markup: True
            text_size: self.size
            text: "[b]A title[b]"
            size_hint_y: None
            height: "20dp"
#            height:self.texture_size[1]

        Label:
            id: _label_
            valign: 'top'
            halign: 'left'
            text_size: self.size
#            size_hint_y: None
            height: '100dp'
#            height: self.texture_size[1]

#        BoxLayout:
#            id: '_spacer_'

# Root widget of a recipe page
RecipeWidget:

	BoxLayout:

		orientation: 'vertical'
		id: _recipe_
		padding: '10dp'
		spacing: '10dp'

        # Contains a recipe title
	    TitleWidget:
			id : _title_

        #Block containing description and list of ingredients
		BoxLayout:
            spacing: '10dp'

            DescriptionWidget:
                id: _description_

            # A list of ingredients
			ListWidget:
				id: _ingredients_
#				markup: True
#				text: "[b]Ingredients\n[/b]"

        # A list of instructions
		ListWidget:
			id: _instructions_
#			markup: True
#			text: "[b]Instructions\n[/b]"
