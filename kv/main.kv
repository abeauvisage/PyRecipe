
<Title>:
	text: '[b] Welcome to PyRecipe! [/b]'
	markup: True
	font_size: '30dp'
	size_hint_y : None
	size: self.texture_size

# Root widget of a MainPage 
MainWidget:
	
	BoxLayout:

		id: _main_
		orientation: 'vertical'
		padding: '5dp'
		spacing: '6dp'
		height: '525dp'
		size_hint_y: None

		Title:
			id: _title_

		Label:
			id: _message_
			halign: 'center'
			valign: 'center'
			size_hint_y: None
			height: '30dp'

		AnchorLayout:
			anchor_x: 'center'
			anchor_y: 'top'
			padding: '5dp'
			spacing: '6dp'
			size_hint_y: 0.8
				
			Button
				id: _mainbutton_
				text: 'Select a recipe'
				halign: 'center'
				valign: 'center'
				size_hint: None,None
				size: '300dp','30dp'

