<TextItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    size_hint_y: None
    height: '45dp'

    Label:
        canvas.before:
            Color:
                rgb: .2, .5, .8
            Rectangle:
                pos: self.pos
                size: self.size

        id: _label_
        text: "TextItem: "
        size_hint: None, None
        height: '30dp'
        pos_hint: {'center_x':0.5}

    TextInput:
        id: _txt_input_
        multiline: False
        size_hint_y: None
        height: '30dp'
        pos_hint: {'center_x':0.5}


<ListItem>:

    orientation: 'vertical'
    spacing: '5dp'
    padding: '5dp'
    size_hint_y: None
    height: '55dp'

    canvas.before:
        Color:
            rgb: .2, .5, .2
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: _layout_
        orientation: 'horizontal'
        spacing: '5dp'
        padding: '5dp'
        height: '45dp'
        size_hint_y: None

        Label:
            canvas.before:
                Color:
                    rgb: .2, .3, .2
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: _label_
            text: "ListItem: "
            size_hint: None, None
            height: '30dp'
            valign: 'center'
            pos_hint: {'center_x':0.5}

        Button:
            id: _button+_
            text: '+'
            size_hint: None, None
            height: '30dp'

<NbPersonsItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    padding: '5dp'
    size_hint_y: None
    height: '150dp'

    Label:
        id: _label_
        text: "Number of persons: "
        size_hint: None, None
        size: self.texture_size
        height: '20dp'
        valign: 'top'

    Label:
        id: _count_
        text: "[b]4 [/b]"
        markup: True
        size_hint: None, None
        size: self.texture_size
        height: '20dp'

    Button:
        id: _button-_
        text: '-'
        size_hint: None,None
        height: '20dp'
        width: '25dp'

    Button:
        id: _button+_
        text: '+'
        size_hint: None,None
        height: '20dp'
        width: '25dp'


<IngredientItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    padding: '5dp'
    size_hint_y: None
    height: '45dp'

    Label:
        id: _name_
        text: "[b]name: [/b]"
        markup: True
        size_hint: None, None
        size: self.texture_size
        height: '30dp'

    Label:
        id: _quanity_
        text: "[b]quantity: [/b]"
        markup: True
        size_hint: None, None
        size: self.texture_size
        height: '30dp'

    Label:
        id: _unit_
        text: "[b]unit: [/b]"
        markup: True
        size_hint: None, None
        size: self.texture_size
        height: '30dp'

    Label:
        id: _desc_
        text: "[b]description (opt): [/b]"
        markup: True
        size_hint: None, None
        size: self.texture_size
        height: '30dp'

<InstructionItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    size_hint_y: None
    height: '40dp'

    Button:
        id: _button_
        text: "-"
        size_hint: None, None
        height: '30dp'
        width: '50dp'
        valign: 'center'

    Label:
        id: _label_
        size_hint: None, None
        height: '30dp'
        valign: 'center'
        halign: 'left'


# Main widget of the CreateRecipe page 
CreateRecipeWidget:

    BoxLayout:
        
        orientation: 'vertical'

        Title:
            id: _title_
            size_hint: 1, 0.2
                
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True

            BoxLayout:
                id: _main_layout_
                orientation: 'vertical'
                size_hint_min_y: '300dp'
                spacing: '5dp'
                padding: '5dp'

                TextItem:
                    id: _ti_title_

                TextItem:
                    id: _ti_desc_

                NbPersonsItem:
                    id: _nb_persons_

                ListItem:
                    id: _li_ingredients_
                    valign: 'center'

                ListItem:
                    id: _li_instructions_
                    valign: 'center'
                    size_hint_y: None

                Button:
                    id: _create_
                    halign: 'center'
                    valign: 'center'
                    text: "create"
                    height : '50dp'
                    size_hint_y: None
