<TextItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    size_hint_y: None
    height: '45dp'

    Label:
        canvas.before:
            Color:
                rgb: .2, .5, .8
            Rectangle:
                pos: self.pos
                size: self.size

        id: _label_
        text: "TextItem: "
        size_hint: None, None
        height: '30dp'
        pos_hint: {'center_x':0.5}

    TextInput:
        id: _txt_input_
        multiline: False
        size_hint_y: None
        height: '30dp'
        pos_hint: {'center_x':0.5}

<UnitDD>:
    id: _dropdown_
    size_hint: None,None
    height: '30dp'

    Button:
        id: _unitless_
        text: 'unitless'
        size_hint_y: None
        height: '20dp'
    Button:
        id: _piece_
        text: 'piece(s)'
        size_hint_y: None
        height: '20dp'
    Button:
        id: _gram_
        text: 'gram(s)'
        size_hint_y: None
        height: '20dp'
    Button:
        id: _liter_
        text: 'liter(s)'
        size_hint_y: None
        height: '20dp'

<UnitItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    size_hint_y: None
    height: '45dp'

    Label:
        canvas.before:
            Color:
                rgb: .2, .5, .8
            Rectangle:
                pos: self.pos
                size: self.size

        id: _label_
        text: "Unit: "
        size_hint: None, None
        height: '30dp'
        pos_hint: {'center_x':0.5}

    Button:
        id: _btn_
        text: "..."
        size_hint: None, None
        height: '30dp'

<IngredientHeader>:

    orientation: 'vertical'
    size_hint_y: None
    height: '150dp'

    TextItem:
        id: _name_

    BoxLayout
        orientation: 'horizontal'
        spacing: '5dp'
        size_hint_y: None
        height: '45dp'

        TextItem:
            id: _quantity_

        UnitItem:
            id: _unit_

    TextItem:
        id: _description_

<ListItem>:

    orientation: 'vertical'
    spacing: '5dp'
    padding: '5dp'
    size_hint_y: None
    height: '55dp'

    canvas.before:
        Color:
            rgb: .2, .5, .2
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        id: _layout_
        orientation: 'horizontal'
        spacing: '5dp'
        padding: '5dp'
        height: '45dp'
        size_hint_y: None

        Label:
            canvas.before:
                Color:
                    rgb: .2, .3, .2
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: _label_
            text: "ListItem: "
            size_hint: None, None
            height: '30dp'
            valign: 'center'
            pos_hint: {'center_x':0.5}

        Button:
            id: _button+_
            text: '+'
            size_hint: None, None
            height: '30dp'

<NbPersonsItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    padding: '5dp'
    size_hint_y: None
    height: '150dp'

    Label:
        id: _label_
        text: "Number of persons: "
        size_hint: None, None
        size: self.texture_size
        height: '20dp'
        valign: 'top'

    Label:
        id: _count_
        text: "[b]4 [/b]"
        markup: True
        size_hint: None, None
        size: self.texture_size
        height: '20dp'

    Button:
        id: _button-_
        text: '-'
        size_hint: None,None
        height: '20dp'
        width: '25dp'

    Button:
        id: _button+_
        text: '+'
        size_hint: None,None
        height: '20dp'
        width: '25dp'


<IngredientItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    size_hint_y: None
    height: '45dp'

    Button:
        id: _button_
        text: "-"
        size_hint: None, None
        height: '30dp'
        width: '50dp'
        valign: 'center'

    Label:
        id: _name_
        text: "name"
        size_hint: None, None
        size: self.texture_size
        height: '30dp'

    Label:
        id: _quan_
        text: "quantity"
        size_hint: None, None
        size: self.texture_size
        height: '30dp'

    Label:
        id: _unit_
        text: "unit"
        size_hint: None, None
        size: self.texture_size
        height: '30dp'

    Label:
        id: _desc_
        text: "(description)"
        size_hint: None, None
        size: self.texture_size
        height: '30dp'

<InstructionItem>:

    orientation: 'horizontal'
    spacing: '5dp'
    size_hint_y: None
    height: '40dp'

    Button:
        id: _button_
        text: "-"
        size_hint: None, None
        height: '30dp'
        width: '50dp'
        valign: 'center'

    Label:
        id: _label_
        size_hint: None, None
        height: '30dp'
        valign: 'center'
        halign: 'left'


# Main widget of the CreateRecipe page 
CreateRecipeWidget:

    BoxLayout:
        
        orientation: 'vertical'

        Title:
            id: _title_
            size_hint: 1, 0.2
                
        ScrollView:
            id: _scrollview_
            do_scroll_x: False
            do_scroll_y: True
            size_hint_y: None

            BoxLayout:
                id: _main_layout_
                orientation: 'vertical'
                size_hint_y: None
                spacing: '5dp'
                padding: '5dp'

                TextItem:
                    id: _ti_title_

                TextItem:
                    id: _ti_desc_

                NbPersonsItem:
                    id: _nb_persons_

                ListItem:
                    id: _li_ingredients_
                    valign: 'center'

                ListItem:
                    id: _li_instructions_
                    valign: 'center'
                    size_hint_y: None

                Button:
                    id: _create_
                    halign: 'center'
                    valign: 'center'
                    text: "create"
                    height : '50dp'
                    size_hint_y: None
